<h1>Hello my little friend</h1>

<div class="row">
  <div class="span4 offset2">
    <p>
      <b>User_id:</b>
      <%= @card.user_id %>
    </p></br>

    <p>
      <b>User name:</b>
      <%= @user.name %>
    </p></br>

    <p>
      <b>User email:</b>
      <%= @user.email %>
    </p></br>

    <p>
      <b>Birthday:</b>
      <%= @card.birthday %>
    </p></br>

    <p>
      <b>Birthplace:</b>
      <%= @card.birthplace %>
    </p></br>
  </div>

  <p>
    <%= image_tag @card.image.url(:thumb).to_s, class: "img-circle" %>
  </p>
</div>

  <h2>Medical Information</h2>
  
<table class="table table-striped">

  <tr>
      <th>Sex</th>
      <th>Blood_groop</th>
      <th>Diagnosis</th>
      <th>Hospitalization</th>
      <th>Medicament</th>
      <th>Patient_conditions</th>
      <th>Temporary_incapacitated</th>
      <th>Treatment_status</th>
      <th>Started with a medical card</th>
  </tr>

  <tr>       
      <td><%= @card.sex %></td>
      <td><%= @card.blood_groop %></td>
      <td><%= @card.diagnosis %></td>
      <td><%= @card.hospitalization %></td>
      <td><%= @card.medicament %></td>
      <td><%= @card.patient_conditions %></td>
      <td><%= @card.temporary_incapacitated %></td>
      <td><%= @card.treatment_status %></td>
      <td><%= @card.created_at %></td>
    </tr>
</table>

  <h2>Analyzes Information</h2>

<table class="table table-striped">

    <tr>
        <th>Analysis_number</th>
        <th>Urine</th>
        <th>Feces</th>
        <th>Sperm</th>
        <th>Biochemical</th>
        <th>Blood_clotting</th>
        <th>Protein</th>
        <th>Diabetes</th>
        <th>HIV</th>
        <th>STDS</th>
        <th>Syphilis</th>
        <th>Analysis created</th>
    </tr>

    
  <% @card.analysis.each do |an| %>
    <tr>       
      <td><%= an.id %></td>
      <td><%= an.urine %></td>
      <td><%= an.feces %></td>
      <td><%= an.sperm %></td>
      <td><%= an.biochemical %></td>
      <td><%= an.blood_clotting %></td>
      <td><%= an.protein %></td>
      <td><%= an.diabetes %></td>
      <td><%= an.hiv %></td>
      <td><%= an.stds %></td>
      <td><%= an.syphilis %></td>
      <td><%= an.created_at %></td>
    </tr>
  <% end %>  
</table>

</br>

<%= link_to 'Edit', edit_medical_card_path, class: "btn btn-warning" %> | 
<%= link_to 'Back', medical_cards_path , class: "btn btn-success" %>